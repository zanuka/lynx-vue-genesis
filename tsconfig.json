{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"target": "ESNext",
		"module": "NodeNext",
		"lib": ["ESNext", "dom"],
		"noEmit": true,
		"strict": true,
		"allowJs": true,
		"jsx": "preserve",
		"noImplicitAny": false,
		"moduleResolution": "NodeNext",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"noUnusedLocals": false,
		"useDefineForClassFields": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"node_modules/@types",
			"./node_modules/vitest/types",
			"./node_modules/@lynx-js/rspeedy/types"
		],
		"types": ["node"]
	},
	"include": [
		"src/*.ts",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/**/*.html",
		"test/vitest-setup.ts"
	],
	"exclude": ["node_modules"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
